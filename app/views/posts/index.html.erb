<h1>Posts</h1>

<%= link_to "New Post", new_post_path %>

<ul>
	<% @posts.each do |post| %>
		<li><%= link_to post.title, post_path(post) %> | <%= link_to 'Edit', edit_post_path(post) %> | <%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: "Are you sure you want to delete #{post.title}?"} %></li>
	<% end %>
</ul>
